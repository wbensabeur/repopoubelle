<mvc:View controllerName="com.vinci.timesheet.employee.controller.EquipmentDetails" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core">
	<Page title="{i18n>equipmentTitle}" navButtonPress="onPressNavBack" showNavButton="true">
		<content>
			<List growing="true" growingScrollToLoad="true">
				<CustomListItem press="onPressEquipmentEdit" type="Active">
					<HBox>
						<HBox width="100%">
							<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
								<Label text="Project -1 " class="textColorBlue"/>
								<Label text="18 Hours"/>
							</VBox>
						</HBox>
						<Button icon="sap-icon://navigation-right-arrow" type="Transparent" press="onPressEquipmentEdit"
							class="sapUiTinyMarginEnd sapUiSmallMarginTopBottom homeBtnSize"/>
					</HBox>
				</CustomListItem>
			</List>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>addEquipmentBtn}" type="Default" press="onPressAddEquipment"/>
				</contentRight>
				<contentLeft></contentLeft>
			</Bar>
		</footer>
	</Page>
</mvc:View>