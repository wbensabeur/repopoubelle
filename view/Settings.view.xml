<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.vinci.timesheet.employee.controller.Settings" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page  title="{i18n>settingTitle}" navButtonPress="onPressNavBack" showNavButton="true">
		<content>
				<Panel>
				<headerToolbar>
					<Toolbar>
						<Title level="H2" text="{i18n>timeCountSettings}"/>
					</Toolbar>
				</headerToolbar>
			<HBox binding="{/ProductCollection}">
			<RadioButton groupName="GroupA" text="{i18n>durationTime}" selected="true" />
			<RadioButton groupName="GroupA" text="{i18n>startEndTime}" />
		</HBox>
			</Panel>
			<HBox>
				<HBox width="100%">
					<Button icon="sap-icon://general-leave-request" type="Transparent"
						class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom homeBtnSize"/>
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
						<Label text="{i18n>absence}" class="sapUiSmallMarginTopBottom"/>
					</VBox>
				</HBox>
				<Switch state="{settings>/absState}" class="sapUiSmallMarginEnd sapUiSmallMarginTopBottom">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Switch>
			</HBox>
			<HBox>
				<HBox width="100%">
					<Button icon="sap-icon://taxi" type="Transparent"
						class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom homeBtnSize"/>
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
						<Label text="{i18n>kilometers}" class="sapUiSmallMarginTopBottom"/>
					</VBox>
				</HBox>
				<Switch state="{settings>/kmState}" class="sapUiSmallMarginEnd sapUiSmallMarginTopBottom">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Switch>
			</HBox>
			<HBox>
				<HBox width="100%">
					<Button icon="sap-icon://shipping-status" type="Transparent"
						class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom homeBtnSize"/>
					<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
						<Label text="{i18n>equipment}" class="sapUiSmallMarginTopBottom"/>
					</VBox>
				</HBox>
				<Switch state="{settings>/equipState}" class="sapUiSmallMarginEnd sapUiSmallMarginTopBottom">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Switch>
			</HBox>
		<!--	<Panel>
				<headerToolbar>
					<Toolbar>
						<Title level="H2" text="{i18n>timeCountSettings}"/>
					</Toolbar>
				</headerToolbar>
				<SegmentedButton selectedKey="{settings>/timeCountType}"  select="onPressSelect" class="sapUiSmallMarginBottom">
					<items>
						<SegmentedButtonItem icon="sap-icon://history" text="{i18n>duration}" key="kDuration" />
						<SegmentedButtonItem icon="sap-icon://arrow-right" text="{i18n>startEndDate}" key="kDate"/>
						
					</items>
				</SegmentedButton>
			</Panel>-->
		</content>
		<footer>
			<Bar class="vinciFooterBar">
				<contentRight>
					<Button text="{i18n>tcCancel}" type="Reject" press="onPressCancelPress"/>
					<Button icon="sap-icon://manager-insight" text="{i18n>confirm}" type="Accept" press="onPressWeeklyReport"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>